<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btnAddStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#17E1C3"
        android:onClick="addstudent"
        android:padding="12dp"
        android:text="Add Student"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnViewStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Student"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#17E1C3"
        android:textColor="#000000"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        android:onClick="viewStudent" />

    <Button
        android:id="@+id/btnCallStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Student"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#17E1C3"
        android:textColor="#000000"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnMessageStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Student"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#17E1C3"
        android:textColor="#000000"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="#17E1C3"
        android:textColor="#000000"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp" />

</LinearLayout>